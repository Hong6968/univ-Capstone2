@page "/"
@rendermode InteractiveServer

<PageTitle>Login</PageTitle>

<h1>Login</h1>

<div>
    
    <label for="id">
        ID:
    </label>
    
    <input @bind="Id"
           placeholder="Your ID"
           required/>

</div>

<div>

    <label for="password">
        Password:
    </label>
    
    <input @bind="Passwd"
           placeholder="Your Password"
           type="password"
           required/>

</div>

<div>
    <label for="error">
        @ErrorMsg
    </label>
</div>

<button class="btn btn-primary" 
        type="button"
        @onclick="LoginButtonClick">
    Login
</button>

<button class="btn btn-primary"
        type="button"
        @onclick="SignUpButtonClick">
    Sign up
</button>